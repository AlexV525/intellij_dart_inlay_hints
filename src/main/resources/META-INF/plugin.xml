<idea-plugin>
  <id>io.alexv525.dart.inlay.hints</id>
  <name>Dart Inlay Hints (Parameter Names)</name>
  <vendor email="alex@example.com">AlexV525</vendor>
  <version>0.1.0</version>
  <description>Shows parameter name hints for Dart positional arguments.</description>

  <depends>com.intellij.modules.platform</depends>
  <!-- Depend on the official Dart plugin to get Dart PSI and language -->
  <depends>Dart</depends>

  <extensions defaultExtensionNs="com.intellij">
    <codeInsight.declarativeInlayProvider
        language="Dart"
        implementationClass="io.alexv525.dart.inlay.DartParameterNameInlayHintsProvider"
        isEnabledByDefault="true"
        group="PARAMETER_NAME_HINTS"
        providerId="io.alexv525.dart.inlay.parameter.names"
        bundle="messages.DartInlayBundle"
        nameKey="dart.inlay.parameter.names.name"
        descriptionKey="dart.inlay.parameter.names.description"/>
  </extensions>

  <resource-bundle>messages.DartInlayBundle</resource-bundle>
</idea-plugin>