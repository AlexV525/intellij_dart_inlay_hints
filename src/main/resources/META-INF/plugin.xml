<idea-plugin>
  <id>com.alexv525.dart.inlay.hints</id>
  <name>Dart Inlay Hints</name>
  <vendor email="alexv.525.li@gmail.com">Alex Li</vendor>
  <version>0.1.0</version>
  <description><![CDATA[
    Shows parameter name hints and variable type hints for Dart code.
    Parameter name hints display the names of positional arguments.
    Variable type hints show inferred types for implicitly typed variables.
  ]]></description>

  <change-notes><![CDATA[
    <h2>0.1.0</h2>
    <ul>
      <li>Initial release.</li>
    </ul>
  ]]></change-notes>

  <depends>com.intellij.modules.platform</depends>
  <depends>Dart</depends>

  <extensions defaultExtensionNs="com.intellij">
    <codeInsight.parameterNameHints
        language="Dart"
        implementationClass="com.alexv525.dart.inlay.DartParameterNameInlayHintsProvider"/>
    <codeInsight.inlayProvider
        language="Dart"
        implementationClass="com.alexv525.dart.inlay.DartVariableTypeInlayHintsProvider"/>
    <postStartupActivity
        implementation="com.alexv525.dart.inlay.DartAnalysisListener"/>
  </extensions>

  <resource-bundle>messages.DartInlayBundle</resource-bundle>
</idea-plugin>
